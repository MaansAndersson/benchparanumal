@kernel void BP4_v0(const dlong Nelements,
		    @restrict const dlong *elementList,
		    const dlong offset,
		    @restrict const dfloat *ggeo,
		    @restrict const dfloat *D,
		    @restrict const dfloat *I,
		    const dfloat lambda,
		    @restrict const dfloat *q,
		    @restrict dfloat *Aq){
  
  for(dlong e=0; e<Nelements; ++e; @outer(0)){
    
    @shared dfloat s_Ip[p_Nfields][p_cubNq][p_cubNq][p_cubNq];	
    
    @shared dfloat s_D[p_cubNq][p_cubNq];
    @shared dfloat s_I[p_cubNq][p_Nq];
    
    @shared dfloat s_GUr[p_Nfields][p_cubNq][p_cubNq];
    @shared dfloat s_GUs[p_Nfields][p_cubNq][p_cubNq];

    @shared dfloat s_ggeo[p_Nggeo][p_cubNq][p_cubNq];

    @exclusive dlong element;
    
    // heavy on registers (FP64, 2*3*8 for N=7)
    @exclusive dfloat r_U[p_cubNq], r_AU[p_cubNq], r_GUt;
    
    // array of threads
    for(int fld=0;fld<p_Nfields;++fld;@inner(2)){
      for(int j=0;j<p_cubNq;++j;@inner(1)){
	for(int i=0;i<p_cubNq;++i;@inner(0)){
	  
	  element = elementList[e];
	  
	  if(fld==0){
	    s_D[j][i] = D[p_cubNq*j+i]; 
	    
	    if(i<p_Nq){
	      s_I[j][i] = I[p_Nq*j+i];
	    }
	  }
	  
	  // load pencil of u into register
	  const dlong base = i + j*p_Nq + element*p_Np;
	  
	  if(i<p_Nq && j<p_Nq){
	    for(int k = 0; k < p_Nq; k++) {
	      r_U[k] = q[base + k*p_Nq*p_Nq + fld*offset];
	    }
	  }
	  
	  for(int k = 0; k < p_cubNq; k++) {
	    r_AU[k] = 0.f; // zero the accumulator
	  }
	}
      }
    }
      
    // raise pressure degree
    interpolateVecHex3D(s_I, r_U, r_U); // also interps to s_Ip
      
    // Layer by layer
#pragma unroll p_cubNq
    for(int k = 0;k < p_cubNq; k++){
      
      @barrier("local");
      
      for(int fld=0;fld<p_Nfields;++fld;@inner(2)){
	for(int j=0;j<p_cubNq;++j;@inner(1)){
	  for(int i=0;i<p_cubNq;++i;@inner(0)){
	    
	    dfloat Ur = 0.f, Us = 0.f, Ut = 0.f;
	    
#pragma unroll p_cubNq
	    for(int m = 0; m < p_cubNq; m++) {
	      dfloat Dim = s_D[i][m];
	      dfloat Djm = s_D[j][m];
	      dfloat Dkm = s_D[k][m];
	      Ut += Dkm*r_U[m];
	      Ur += Dim*s_Ip[fld][k][j][m];
	      Us += Djm*s_Ip[fld][k][m][i];
	    }
	    
	    // prefetch geometric factors
	    const dlong gbase = element*p_Nggeo*p_cubNp + k*p_cubNq*p_cubNq + j*p_cubNq + i;
	    
	    const dfloat G00 = s_ggeo[p_G00ID][j][i];
	    const dfloat G01 = s_ggeo[p_G01ID][j][i];
	    const dfloat G02 = s_ggeo[p_G02ID][j][i];
	    const dfloat G11 = s_ggeo[p_G11ID][j][i];
	    const dfloat G12 = s_ggeo[p_G12ID][j][i];
	    const dfloat G22 = s_ggeo[p_G22ID][j][i];
	    const dfloat GWJ = s_ggeo[p_GWJID][j][i];
	    
	    s_GUr[fld][j][i] = (G00*Ur + G01*Us + G02*Ut);
	    s_GUs[fld][j][i] = (G01*Ur + G11*Us + G12*Ut);

	    r_GUt = G02*Ur + G12*Us + G22*Ut;
	    
	    r_AU[k] += GWJ*lambda*s_Ip[fld][k][j][i];
	  }
	}
      }
      
      @barrier("local");

      for(int fld=0;fld<p_Nfields;++fld;@inner(2)){
	for(int j=0;j<p_cubNq;++j;@inner(1)){
	  for(int i=0;i<p_cubNq;++i;@inner(0)){
	    
	    dfloat AUtmp = 0;
	   
#pragma unroll p_cubNq
	    for(int m = 0; m < p_cubNq; m++){
	      dfloat Dmi = s_D[m][i];
	      dfloat Dmj = s_D[m][j];
	      dfloat Dkm = s_D[k][m];
	      
	      AUtmp += Dmi*s_GUr[fld][j][m];
	      AUtmp += Dmj*s_GUs[fld][m][i];
	      r_AU[m] += Dkm*r_GUt;
	    }
	    
	    r_AU[k] += AUtmp;
	  }
	}
      }
    }
    
    // lower pressure degree
    testVecHex3D(s_I, r_AU);
    
    // write out

    for(int fld=0;fld<p_Nfields;++fld;@inner(2)){
      for(int j=0;j<p_cubNq;++j;@inner(1)){
	for(int i=0;i<p_cubNq;++i;@inner(0)){
	  
	  if(i<p_Nq && j<p_Nq){
#pragma unroll p_cubNq
	    for(int k = 0; k < p_Nq; k++){
	      const dlong id = element*p_Np +k*p_Nq*p_Nq+ j*p_Nq + i;
	      Aq[id+offset*fld] = r_AU[k];
	    }
	  }
	}
      }
    }
  }
}



@kernel void BP4Dot_v0(const dlong Nelements,
		       @restrict const dlong *elementList,
