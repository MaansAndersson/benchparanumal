	}
	
        // load pencil of u into register
        const dlong base = i + j*p_Nq + element*p_Np;
	
	if(i<p_Nq && j<p_Nq){
	  for(int k = 0; k < p_Nq; k++) {
	    r_U[k] = q[base + k*p_Nq*p_Nq + 0*offset];
	    r_V[k] = q[base + k*p_Nq*p_Nq + 1*offset];
	    r_W[k] = q[base + k*p_Nq*p_Nq + 2*offset];
	  }
	}
	
	for(int k = 0; k < p_cubNq; k++) {
	  r_AU[k] = 0.f; // zero the accumulator
	  r_AV[k] = 0.f; // zero the accumulator
	  r_AW[k] = 0.f; // zero the accumulator
	}
      }
    }
    
    // interpolate to quadrature
    interpolateHex3D(s_I, r_U, r_IU);
    interpolateHex3D(s_I, r_V, r_IV);
    interpolateHex3D(s_I, r_W, r_IW);
    
    // Layer by layer
#pragma unroll p_cubNq
    for(int k = 0;k < p_cubNq; k++){
      
      @barrier("local");
      
      for(int j=0;j<p_cubNq;++j;@inner(1)){
        for(int i=0;i<p_cubNq;++i;@inner(0)){
	  
          // share u(:,:,k)
          s_U[j][i] = r_IU[k];
	  s_V[j][i] = r_IV[k];
	  s_W[j][i] = r_IW[k];	  

          r_Ut = 0; r_Vt = 0; r_Wt = 0;	  
#pragma unroll p_cubNq
          for(int m = 0; m < p_cubNq; m++) {
            dfloat Dkm = s_D[k][m];
            r_Ut += Dkm*r_IU[m];
	    r_Vt += Dkm*r_IV[m];
